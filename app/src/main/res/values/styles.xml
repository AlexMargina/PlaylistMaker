<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/purple_550</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSmallStyle" parent="TextStyle">
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="TextMediumStyle" parent="TextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBigStyle" parent="TextStyle">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="TextSongStyle" parent="TextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextArtiStyle" parent="TextStyle">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="CapTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextMediaStyle" parent="TextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/purple_550</item>
        <item name="android:textSize">@dimen/text_19sp</item>
    </style>

    <style name="GrandButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/buton_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">@color/text_black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="cornerRadius">@dimen/big_button_corner</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/text_color</item>
        <item name="android:textColor">@color/background_icon</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MediaButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/text_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/background_icon</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="TextNotFoundStyle" parent="TextStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">19sp</item>
        <item name="android:drawableTop">@drawable/song_not_found</item>
    </style>

    <style name="ListNotFoundStyle" parent="TextStyle">
        <item name="android:foreground">@drawable/song_not_found</item>
    </style>

    <style name="TextNotInetStyle" parent="TextStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">19sp</item>
        <item name="android:drawableTop">@drawable/connection_problem</item>
        <item name="android:drawableBottom">@drawable/button_update</item>
    </style>

    <style name="NameFieldTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_player</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="PlayerTrackTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="PlayerFieldTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="PlayerArtistTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="TextTabLayoutStyle" parent="@android:style/TextAppearance.StatusBar.EventContent.Title">
        <item name="tabIndicatorColor">@color/text_color</item>
        <item name="tabTextColor">@color/background</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Пользовательская тема -->
    </style>

</resources>