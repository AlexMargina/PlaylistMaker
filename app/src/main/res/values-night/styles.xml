<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="TextSmallStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextMediumStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextBigStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextSongStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/edit_text_dn</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextArtiStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="GrandButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/buton_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">@color/text_black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="cornerRadius">@dimen/big_button_corner</item>
    </style>

    <style name="TextNotFoundStyle" parent="TextStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">19sp</item>
        <item name="android:drawableTop">@drawable/sound_not_found_night</item>
    </style>

    <style name="ListNotFoundStyle" parent="TextStyle">
        <item name="android:foreground">@drawable/sound_not_found_night</item>
    </style>

    <style name="TextNotInetStyle" parent="TextStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">19sp</item>
        <item name="android:drawableTop">@drawable/connection_problem_night</item>
        <item name="android:drawableBottom">@drawable/button_update_night</item>
    </style>

</resources>